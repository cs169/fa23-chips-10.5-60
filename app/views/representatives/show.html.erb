<div class="container">
    <div class="row">
        <div class="col text-center">
            <div class="p-4 mb-3 bg-light rounded">
                <h1 class="fst-italic">
                    <%= @representative.name %>
                </h1>
                <p> Official Title: <%= @representative.title %> </p>
                <p> Member of the <%= @representative.political_party %> </p>
                <p> Address: <%= @representative.street %>, <%= @representative.city %>, <%= @representative.state %>, <%= @representative.zip %> </p>
                <div class="container">
                    <img src="<%= @representative.photo_url %>"/>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="col text-center">
        <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
    </div>
</div>
